<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="180dp"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/home_book_cover"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/home_book_title"
        android:scaleType="fitCenter"
        android:contentDescription="@string/app_name"
        android:background="@color/book_background"
        android:src="@drawable/ic_loading_book"
        />

    <TextView
        android:id="@+id/home_book_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/home_book_author"
        app:layout_constraintStart_toStartOf="@id/home_book_author"
        android:textColor="@color/textColor"
        android:textSize="13sp"
        android:text="@string/download"
        />

    <TextView
        android:id="@+id/home_book_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="@color/textColorGrey"
        android:textSize="11sp"
        android:text="@string/download"
        />

</androidx.constraintlayout.widget.ConstraintLayout>