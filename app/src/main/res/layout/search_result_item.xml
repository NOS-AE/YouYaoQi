<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/search_result_container"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="150dp"
    android:background="@color/colorLight">

    <ImageView
        android:id="@+id/search_result_cover"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:contentDescription="@string/app_name"
        android:src="@drawable/test"
        />

    <TextView
        android:id="@+id/search_result_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/search_result_cover"
        android:layout_marginTop="15dp"
        app:layout_constraintStart_toEndOf="@id/search_result_cover"
        android:layout_marginStart="20dp"
        android:textStyle="bold"
        android:textSize="18sp"
        android:text="今天我是女生"
        />

    <TextView
        android:id="@+id/search_result_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/search_result_title"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@id/search_result_title"
        android:textColor="@color/textColorGrey"
        android:textSize="11sp"
        android:text="我是个怪蜀黍"
        />

</androidx.constraintlayout.widget.ConstraintLayout>